<h4>New Comment</h4>
<%= form_for [topic, post, post.comments.new] do |f| %>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 3, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>

<% end %>