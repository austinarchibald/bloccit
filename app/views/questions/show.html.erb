<h1><%= @question.title %></h1>

<%= link_to "Edit", edit_question_path(@question), class: 'btn btn-success' %>

<p><%= @question.body %></p>
<p>
  <% if @question.resolved == true %>
    <%= '☑ Resolved' %>
  <% else %>
    <%= '☐ Not Resolved' %>
  <% end %>
</p>

<%= link_to 'Destroy', question_path(@question), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this?'}, :class => 'btn btn-danger' %>